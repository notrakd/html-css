.card-text-max2 {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    overflow: hidden;
}

@media (min-width: 1200px) {
    .card-text-max2:hover {
        position: absolute;
        display: block;
        overflow: visible;
        top: 0;
        z-index: 10;
        background-color: white;
        margin-left: -17px;
        margin-right: -18px;
        padding-left: 17px;
        padding-right: 18px;
        padding-bottom: 17px;
        border-bottom: 1px solid #0000002d;
        border-left: 1px solid #0000002d;
        border-right: 1px solid #0000002d;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }
    
    .card-text {
        height: 2em;
    }
}
